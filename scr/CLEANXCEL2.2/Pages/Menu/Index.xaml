                    AlignmentY="Top" 
                    ImageSource="..\..\Images\Backgrounds\black_spot.png" 
                    Stretch="None" 
                    TileMode="Tile" 
                    ViewportUnits="Absolute"
                    Viewport="0,0,2,2"/>
            </DockPanel.Background>

            <!--<Border>
                <UserControls:Dial />
            </Border>-->

            <Border Padding="30">
                <Grid>

