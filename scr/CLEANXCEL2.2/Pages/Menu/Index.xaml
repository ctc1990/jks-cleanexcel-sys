    <Grid>
        <Grid Name="Loading" Panel.ZIndex="200" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{StaticResource PrimaryColor}" Height="102px" Visibility="Hidden">
                <Grid Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <svgc:SvgViewbox Grid.Column="0" Source="/CLEANXCEL2.2;component/Images/Logos/logo_CXSymbol.svg" Width="50"/>
                    <!--<fa:ImageAwesome Grid.Column="0" Icon="Spinner" Spin="True" Foreground="{StaticResource CWhite}" SpinDuration="5" Width="30" Margin="20,0"/>-->
                    <TextBlock Name="LoadingDesc" Grid.Column="1" Text="Loading" Margin="20,0,0,0"
                       Style="{StaticResource H1}"
                       Foreground="{StaticResource CWhite}"
                       VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        <Border Padding="30,30,0,0">
            <Frame x:Name="FrameContainer" Loaded="FrameLoaded" LoadCompleted="FrameContainer_LoadCompleted"
                NavigationUIVisibility="Hidden"
                Panel.ZIndex="150"/>
        </Border>

        <Grid Name="AlarmWarning"
              Width="262px" Height="62px" 
              HorizontalAlignment="Right" VerticalAlignment="Bottom"
              Margin="0,0,15,-62"
              Background="{StaticResource PrimaryColor}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Name="AlarmWarningText"
                Tag="Inactive"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                 Panel.ZIndex="200" FontFamily="{StaticResource Roboto}" FontSize="15px" Foreground="{StaticResource CWhite}"
                 Text="5 Alarm(s) has occured"/>
            <Button Name="DirecttoAlarm" Grid.ColumnSpan="2" Panel.ZIndex="201"
                    Style="{StaticResource EmptyButtonStyle}" Click="DirecttoAlarm_Click"/>
            <Button 
                Grid.Column="1" 
                Name="HideAlarm"
                Panel.ZIndex="202"
                VerticalAlignment="Center"
                Style="{StaticResource CustomDeleteButton}"
                Click="HideAlarm_Click"/>
        </Grid>

        <Border Height="120" Background="{StaticResource PrimaryColor}" VerticalAlignment="Top" Opacity="0.2"/>
        <Border 
            Panel.ZIndex="152"
            Padding="20"
            Width="130" Height="130" 
            HorizontalAlignment="Right" VerticalAlignment="Top">
            <ToggleButton x:Name="MainMenu" Click="MainMenu_Click" Width="80" Style="{StaticResource TBMainMenu}">
                <DockPanel x:Name="MenuLogo"
